<Window x:Class="WpfWebcamImageProcessor.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:local="clr-namespace:WpfWebcamImageProcessor.App.Views"
        xmlns:vm="clr-namespace:WpfWebcamImageProcessor.App.ViewModels"
        xmlns:conv="clr-namespace:WpfWebcamImageProcessor.App.Converters"
        xmlns:oxy="http://oxyplot.org/wpf"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="700" Width="900">

    <Window.Resources>
        <conv:BitmapToBitmapSourceConverter x:Key="BitmapConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="Capture and Process Image"
                HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10,5" Margin="0,0,0,10"
                Command="{Binding ProcessImageCommand}" />

        <Border Grid.Row="1" Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="5">
            <Image x:Name="ProcessedImageDisplay" Stretch="Uniform"
                   Source="{Binding DisplayBitmap, Converter={StaticResource BitmapConverter}}"/>
        </Border>

        <oxy:PlotView Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Margin="5" MinWidth="250" Model="{Binding ChartViewModel.HistogramPlotModel}" />

        <Grid Grid.Row="2" Grid.Column="0" Margin="10,15,10,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Slider x:Name="FilterSlider" Grid.Row="0" VerticalAlignment="Center"
                    Minimum="0"
                    Maximum="4" TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    TickPlacement="BottomRight"
                    Value="{Binding SelectedFilterIndex, Mode=TwoWay}" />
            <Grid Grid.Row="1" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="1" Text="Grayscale" HorizontalAlignment="Center" FontSize="10"/>
                <TextBlock Grid.Column="3" Text="Blur" HorizontalAlignment="Center" FontSize="10"/>
                <TextBlock Grid.Column="5" Text="Erode/Dilate" HorizontalAlignment="Center" FontSize="10"/>
                <TextBlock Grid.Column="7" Text="Edges" HorizontalAlignment="Center" FontSize="10"/>
                <TextBlock Grid.Column="9" Text="Contours" HorizontalAlignment="Center" FontSize="10"/>
            </Grid>
        </Grid>

    </Grid>
</Window>
